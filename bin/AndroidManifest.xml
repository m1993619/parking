<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.graduation.parking"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.graduation.parking.WelcomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.graduation.parking.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.graduation.fragment.parking.ParkingCheckOutActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.graduation.fragment.parking.ParkingCheckInActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.graduation.fragment.parking.ParkingCheckInEditActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.graduation.parking.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="com.graduation.parking.UserInfoActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" >
        </activity>
        <activity
            android:name="com.graduation.fragment.escape.EscapeRecordActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.graduation.fragment.escape.EscapePayActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.graduation.fragment.escape.EscapeDetailActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.graduation.parking.LoadingActivity"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>