<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/pay_sign"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_weight="1"
        android:src="@drawable/ic_false" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/car_no"
                style="@style/parking_has_car_image"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/parking_name"
                style="@style/parking_has_car_image"
                android:gravity="center_vertical" />
        </LinearLayout>

        <TextView
            android:id="@+id/parking_stamp"
            style="@style/parking_has_car_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/parking_time"
                style="@style/parking_has_car_image"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/cost"
                style="@style/parking_has_car_image"
                android:gravity="center_vertical" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>