<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="24dp"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="收费日报"
            android:textSize="20sp" />

        <View
            style="@style/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="#FF909090" />

        <LinearLayout style="@style/daily_report" >

            <TextView
                style="@style/daily_report_text1"
                android:text="日                期： " />

            <TextView
                android:id="@+id/date"
                style="@style/daily_report_text2" />
        </LinearLayout>

        <LinearLayout style="@style/daily_report" >

            <TextView
                style="@style/daily_report_text1"
                android:text="收      费      员： " />

            <TextView
                android:id="@+id/user_name"
                style="@style/daily_report_text2" />
        </LinearLayout>

        <LinearLayout style="@style/daily_report" >

            <TextView
                style="@style/daily_report_text1"
                android:text="路                段： " />

            <TextView
                android:id="@+id/street"
                style="@style/daily_report_text2" />
        </LinearLayout>

        <LinearLayout style="@style/daily_report" >

            <TextView
                style="@style/daily_report_text1"
                android:text="收  费    车  次： " />

            <TextView
                android:id="@+id/cost_times"
                style="@style/daily_report_text2" />
        </LinearLayout>

        <LinearLayout style="@style/daily_report" >

            <TextView
                style="@style/daily_report_text1"
                android:text="收  费    时  长： " />

            <TextView
                android:id="@+id/parking_range"
                style="@style/daily_report_text2" />
        </LinearLayout>

        <LinearLayout style="@style/daily_report" >

            <TextView
                style="@style/daily_report_text1"
                android:text="收  费    金  额： " />

            <TextView
                android:id="@+id/act_cost"
                style="@style/daily_report_text2" />
        </LinearLayout>

        <LinearLayout style="@style/daily_report" >

            <TextView
                style="@style/daily_report_text1"
                android:text="未 驶 离 车 辆： " />

            <TextView
                android:id="@+id/uncost_times"
                style="@style/daily_report_text2" />
        </LinearLayout>

        <LinearLayout style="@style/daily_report" >

            <TextView
                style="@style/daily_report_text1"
                android:text="免  费    车  次： " />

            <TextView
                android:id="@+id/free_times"
                style="@style/daily_report_text2" />
        </LinearLayout>

        <LinearLayout style="@style/daily_report" >

            <TextView
                style="@style/daily_report_text1"
                android:text="免  费    时  长： " />

            <TextView
                android:id="@+id/free_range"
                style="@style/daily_report_text2" />
        </LinearLayout>

        <LinearLayout style="@style/daily_report" >

            <TextView
                style="@style/daily_report_text1"
                android:text="预      收      费： " />

            <TextView
                android:id="@+id/pre_cost"
                style="@style/daily_report_text2" />
        </LinearLayout>

        <LinearLayout style="@style/daily_report" >

            <TextView
                style="@style/daily_report_text1"
                android:text="补  缴    收  费： " />

            <TextView
                android:id="@+id/escape_pay"
                style="@style/daily_report_text2" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>