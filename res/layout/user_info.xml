<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout style="@style/user_info" >

            <TextView
                style="@style/user_info_text"
                android:text="用户名称 :" />

            <EditText
                android:id="@+id/f_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3" />
        </LinearLayout>

        <LinearLayout style="@style/user_info" >

            <TextView
                style="@style/user_info_text"
                android:text="用户帐号 :" />

            <EditText
                android:id="@+id/f_account"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3" />
        </LinearLayout>

        <LinearLayout style="@style/user_info" >

            <TextView
                style="@style/user_info_text"
                android:text="用户密码 :" />

            <EditText
                android:id="@+id/f_password"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:inputType="textPassword" />
        </LinearLayout>

        <LinearLayout style="@style/user_info" >

            <TextView
                style="@style/user_info_text"
                android:text="用户手机 :" />

            <EditText
                android:id="@+id/f_phone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3" 
                android:inputType="phone"/>
        </LinearLayout>

        <LinearLayout style="@style/user_info" >

            <TextView
                style="@style/user_info_text"
                android:text="用户类别 :" />

            <EditText
                android:id="@+id/f_type"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3" />
        </LinearLayout>

        <LinearLayout style="@style/user_info" >

            <TextView
                style="@style/user_info_text"
                android:text="班组名称 :" />

            <EditText
                android:id="@+id/f_shift_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3" />
        </LinearLayout>

        <LinearLayout style="@style/user_info" >

            <TextView
                style="@style/user_info_text"
                android:text="街道名称 :" />

            <EditText
                android:id="@+id/f_street_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3" />
        </LinearLayout>

        <LinearLayout style="@style/user_info" >

            <Button
                android:id="@+id/up_user_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="update" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>