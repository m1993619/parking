<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:padding="5dp" >

        <TextView
            android:id="@+id/title1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="车位范围"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/parking_code_from"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/title1"
            android:inputType="number" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/parking_code_from"
            android:layout_below="@id/title1"
            android:layout_toRightOf="@id/parking_code_from"
            android:gravity="center"
            android:text="到 "
            android:textSize="18sp" />

        <EditText
            android:id="@+id/parking_code_to"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/title1"
            android:layout_toRightOf="@id/text1"
            android:inputType="number" />

        <Button
            android:id="@+id/code_ok_button"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_below="@id/parking_code_from"
            android:layout_marginTop="5dp"
            android:background="@drawable/btn_style_green"
            android:gravity="center"
            android:text="OK" />

        <Button
            android:id="@+id/code_cancel_button"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_below="@id/parking_code_from"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/code_ok_button"
            android:background="@drawable/btn_style_green"
            android:gravity="center"
            android:text="cancel" />
    </RelativeLayout>

</LinearLayout>