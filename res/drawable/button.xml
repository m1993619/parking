<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false"><shape>
            <corners android:radius="25dp" />

            <gradient android:angle="90" android:endColor="#E5E5E5" android:startColor="#808080" android:type="linear" />
        </shape></item>
    <item android:bottom="1dp" android:left="1dp" android:right="1dp" android:state_pressed="true" android:top="1dp"><shape>
            <corners android:radius="25dp" />

            <gradient android:angle="90" android:endColor="#A8C9FF" android:startColor="#0060FF" android:type="linear" />
        </shape></item>

</selector>